@model IEnumerable<Category>

@{
    ViewData["Title"] = "Index";
}


<div class="container p-4">
    <div class="row mb-3 align-items-center">
        <div class="col-md-6">
            <h2 class="text-primary">List of Categories</h2>
        </div>
        <div class="col-md-6 text-end">
            <a class="btn btn-primary" asp-action="CreateUpdate" asp-controller="Category">
                <i class="bi bi-plus-circle"></i> Create New Category
            </a>
        </div>
    </div>

    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>Category Name</th>
                <th>Display Order</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.DisplayOrder</td>
                    <td>
                        <div class="btn-group" role="group">
                            <a class="btn btn-sm btn-warning" asp-action="CreateUpdate" asp-route-id="@item.Id">
                                <i class="bi bi-pencil-square"></i> Edit
                            </a>
                            <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.Id">
                                <i class="bi bi-trash"></i> Delete
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
